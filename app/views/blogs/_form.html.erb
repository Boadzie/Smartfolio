<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <%= blog.errors.full_messages.each do |error| %>
        <%= js add_gritter(error, title:"Boadzie Daniel portfolio site!", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title, class:"form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, rows:"10", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class:"btn btn-dark" %>
  </div>
<% end %>
