<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %> </title>
    <%= csrf_meta_tags %>
    <meta name="keywords" content="<%= @seo_keywords %>" />
     <%= favicon_link_tag "other_favicon.ico" %>
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <%= render 'shared/blog_header' %>
    <div class="row">
       <div class="col-md-8">
         <%= yield %>
       </div>
       <div class="col-md-4">
        <%= render 'shared/blog_sidebar' %>  
       </div>
    </div>
     <%= alerts %>
    <%= render 'shared/blog_footer' %>

  <!--   <#%= render 'shared/nav', location: 'bottom' %> -->
    
  </div>
  </body>
</html>
