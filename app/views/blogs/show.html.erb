<main role="main">
      <div class="row">
        <div class="col-md-8 blog-main">
         <h1><%= @blog.title %></h1>
         <p>
           <%= @blog.topic.title %>
         </p>
         <% if logged_in?(:site_admin) %> 
         <%= link_to 'Edit', edit_blog_path(@blog), class:'btn btn-sm btn-outline-secondary space-bottom' %>
         <% end %>
         <p><%= @blog.body %></p>
          <!-- start of comment form -->
         <%= render 'comments/comment_form' %>
        <!-- end of comment form -->
        <div id="comments" data-blog-id="<%= @blog.id %>">
        <%= render @blog.comments %>
        </div>
        </div>
       
      </div><!-- /.row -->
      
</main><!-- /.container -->
