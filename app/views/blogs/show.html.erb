<main role="main">
      <div class="row">
        <div class="col-md-8 blog-main">
         <h1><%= @blog.title %></h1>
         <% if logged_in?(:site_admin) %> 
         <%= link_to 'Edit', edit_blog_path(@blog), class:'btn btn-sm btn-outline-secondary space-bottom' %>
         <% end %>
         <p><%= @blog.body %></p>
        </div><!-- /.blog-main -->
      </div><!-- /.row -->

</main><!-- /.container -->
