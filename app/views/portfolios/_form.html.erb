<%= form_for (@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :blog_title, class:"form-control" %>
      </div>
      <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, id: :blog_subtitle, class:"form-control" %>
      </div>
      <div class="form-group">
        <label class="btn btn-dark">
           Upload an image<%= form.file_field :main_image, style:'display:none' %>
        </label>
      </div>
      <div class="form-group">
        <label class="btn btn-dark"> 
          Upload an image <%= form.file_field :thumb_image, style:'display:none' %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, id: :blog_body, class:"form-control", rows:15 %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <h1>Technologies Used:</h1>
      <div class= "form-group">
        <%= form.fields_for :technologies do |technology_form|  %>
          <div class= "form-group">
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class:"form-control" %>
          </div>
        <% end %>
      </div>
    <div class="form-group">
      <%= form.submit class:"btn btn-block btn-dark" %>
    </div>
  </div>
<% end %>
