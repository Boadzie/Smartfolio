<main role="main">
      <div class="row">
        <div class="col-md-12 blog-main">
         <h1><%= @blog.title %></h1>
         <nav class="breadcrumb">
          <%= link_to 'Home', root_path, class:"breadcrumb-item" %>
          <%= link_to  @blog.topic.title, topic_path(@blog.topic), class:"breadcrumb-item" %>
          <a class="breadcrumb-item" href="#">Library</a>
          <a class="breadcrumb-item" href="#">Data</a>
          <span class="breadcrumb-item active"><%= @blog.title %></span><br>
          
        </nav>
        <nav class="breadcrumb">
          <% if logged_in?(:site_admin) %> 
              <span class="">
              <%= link_to "Edit", edit_blog_path(@blog),
                    class:'btn btn-outline-secondary' 
                %>
              <%= link_to "Delete", @blog, method: :delete, data: {confirm: "Are you sure?"},
                  class:'btn btn-outline-danger' 
              %>
              <% end %>
         </nav>
         <p><%= markdown (@blog.body) %></p>
          <!-- start of comment form -->
         <%= render 'comments/comment_form' %>
        <!-- end of comment form -->
        <div id="comments" data-blog-id="<%= @blog.id %>">
        <%= render @blog.comments %>
        </div>
        </div>
       
      </div><!-- /.row -->
      
</main><!-- /.container -->
